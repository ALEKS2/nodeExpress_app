extends templates.pug
block content
  h1.text-center Register
  form(method="POST", action="/user/register")
   .form-group
    lable Name:
    input.form-control(name="name", type="text")
   .form-group
    lable Email:
    input.form-control(name="email", type="text")
   .form-group
    lable Username:
    input.form-control(name="username", type="text")
   .form-group
    lable Password:
    input.form-control(name="password", type="password")
   .form-group
    lable Confirm Password:
    input.form-control(name="password2", type="password")
   input.btn.btn-primary(value="submit" type="submit")